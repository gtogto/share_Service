<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smarteist.imageslider.Book_Fragment.calendarDate_Book"
    tools:showIn="@layout/book_layout">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약 정보"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textColor="@color/color_purple2"
                android:textSize="25sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/result_check_in_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 시작"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Gray1"
                        android:textSize="20sp">
                    </TextView>

                    <TextView
                        android:id="@+id/result_check_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-11-11"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Black"
                        android:textSize="20sp">
                    </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/result_check_out_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 종료"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Gray1"
                        android:textSize="20sp">
                    </TextView>

                    <TextView
                        android:id="@+id/result_check_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-11-11"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Black"
                        android:textSize="20sp">
                    </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/result_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용 요금"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:fontFamily="sans-serif-black"
                    android:textColor="@color/color_Gray1"
                    android:textSize="20sp">
                </TextView>

                <TextView
                    android:id="@+id/result_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000sys/h"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:fontFamily="sans-serif-black"
                    android:textColor="@color/color_purple2"
                    android:textSize="20sp">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="1dp"
                android:background="#000000"/>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약자 정보"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:fontFamily="sans-serif-black"
                    android:textColor="@color/color_purple2"
                    android:textSize="25sp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/line4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/test1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예약자 이름"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Gray1"
                        android:textSize="20sp">
                    </TextView>

                    <TextView
                        android:id="@+id/test2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오 규 태"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Black"
                        android:textSize="20sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/test3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴대폰 번호"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Gray1"
                        android:textSize="20sp">
                    </TextView>

                    <TextView
                        android:id="@+id/test4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010 - 1234 - 1592"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Black"
                        android:textSize="20sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/test5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 이용요금"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_Gray1"
                        android:textSize="20sp">
                    </TextView>

                    <TextView
                        android:id="@+id/test6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000sys"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:fontFamily="sans-serif-black"
                        android:textColor="@color/color_purple2"
                        android:textSize="20sp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="1dp"
                android:background="#000000"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
