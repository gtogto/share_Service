<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F0F5FB"
    tools:context=".main_page">

    <!-- Compulsory Child Container required for ScrollView -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/line_0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_welcome"
                android:onClick="onClick_img1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="새로운 공간을 찾으시나요?"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-black"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/line_1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_01"
                android:onClick="onClick_img1"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_14"/>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="[강남] 코워페이스 300,000원/월"
                android:textSize="15sp"
                app:fontFamily="sans-serif-black"></TextView>

            <TextView
                android:id="@+id/text_item_2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[마포] 홍대근처 200,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/text_item_3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[금천] 비즈액티브 150,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/line_2"
            android:layout_below="@id/line_1"
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_05" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_07" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_08" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_4"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[종로] 광화문근처 200,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/text_item_5"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[판교] 알파돔시티 400,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/text_item_6"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[역삼] 토즈 2호점 10,000원/시간"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/line_3"
            android:layout_below="@id/line_2"
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img7"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_09" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_10" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_item_7"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[마포] 상암동 250,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/text_item_8"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[판교] 판교역 근처 350,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/text_item_9"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[성남] 상대원 공단 10,000원/시간"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>