<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    >

    <!-- Compulsory Child Container required for ScrollView -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/line_0"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_slider_mainActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorEnabled="true"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/line_1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img1"
                android:onClick="onClick_img1"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img2" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="[강남] 코워페이스 300,000원/월"
                android:textSize="15sp"
                app:fontFamily="sans-serif-black"></TextView>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[마포] 홍대근처 200,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[금천] 비즈액티브 150,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/line_2"
            android:layout_below="@id/line_1"
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img4" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img5" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[종로] 광화문근처 200,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[판교] 알파돔시티 400,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[역삼] 토즈 2호점 10,000원/시간"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/line_3"
            android:layout_below="@id/line_2"
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img7"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img7" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img8" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/img9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[마포] 상암동 250,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[판교] 판교역 근처 350,000원/월"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:text="[성남] 상대원 공단 10,000원/시간"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>