                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="item4-price"
                android:textSize="15sp"
                app:fontFamily="sans-serif-black"></TextView>

            <TextView
                android:id="@+id/price_item_5"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="item5-price"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/price_item_6"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="item6-price"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line_3"
            android:layout_below="@id/line_2"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img7"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_09"
                android:onClick="onClick_img7"/>

            <ImageView
                android:id="@+id/img8"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
