<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F0F5FB">

    <!-- Compulsory Child Container required for ScrollView -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_purple2"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/line_0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_welcome"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="새로운 공간을 찾으시나요?"
                android:textColor="@color/color_purple2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/anton"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line_1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_01"
                android:onClick="onClick_img1"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_14"
                android:onClick="onClick_img2"/>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/office_sample_04"
                android:onClick="onClick_img3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_name_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/line_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="item1-name"
                android:textSize="15sp"
                app:fontFamily="sans-serif-black"></TextView>

            <TextView
                android:id="@+id/text_item_2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="item2-name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/text_item_3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="item3-name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_price_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/txt_name_line_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_item_1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="item1-price"
                android:textSize="15sp"
                app:fontFamily="sans-serif-black"></TextView>

            <TextView
                android:id="@+id/price_item_2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="item2-price"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:fontFamily="sans-serif-black"
                android:textSize="15sp">
